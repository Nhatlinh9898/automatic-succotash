# ==========================================
# 3D MC Presenter PRO - Environment Configuration
# ==========================================

# AI PROVIDER SELECTION
# Options: gemini, openai, claude
AI_PROVIDER=gemini

# ==========================================
# GOOGLE GEMINI API CONFIGURATION
# ==========================================
# Get API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# ==========================================
# OPENAI GPT API CONFIGURATION  
# ==========================================
# Get API key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# ==========================================
# ANTHROPIC CLAUDE API CONFIGURATION
# ==========================================
# Get API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=1000

# ==========================================
# GOOGLE TEXT-TO-SPEECH API
# ==========================================
# Get API key from: https://console.cloud.google.com/
# Enable Cloud Text-to-Speech API
TTS_API_KEY=your_google_tts_api_key_here
TTS_LANGUAGE_CODE=vi-VN
TTS_VOICE_NAME=vi-VN-Wavenet-A
TTS_ENCODING=MP3

# Voice mapping for different characters
TTS_VOICE_FEMALE1=vi-VN-Wavenet-A
TTS_VOICE_FEMALE2=vi-VN-Wavenet-B
TTS_VOICE_FEMALE3=vi-VN-Wavenet-C
TTS_VOICE_FEMALE4=vi-VN-Wavenet-D
TTS_VOICE_FEMALE5=vi-VN-Wavenet-E
TTS_VOICE_FEMALE6=vi-VN-Wavenet-F

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3001
NODE_ENV=development
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==========================================
# DATABASE CONFIGURATION (Optional)
# ==========================================
# MongoDB for storing chat history and user preferences
MONGODB_URI=mongodb://localhost:27017/mc-presenter
MONGODB_DB_NAME=mc-presenter

# Redis for caching TTS responses
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ==========================================
# FILE STORAGE CONFIGURATION
# ==========================================
# Local storage for TTS audio files
AUDIO_STORAGE_PATH=./public/audio
MAX_AUDIO_FILES=1000
AUDIO_FILE_RETENTION_DAYS=30

# Model storage directory
MODEL_STORAGE_PATH=./models
CHARACTER_MODEL_PATH=./characters
TEXTURE_STORAGE_PATH=./textures

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Secret for authentication (if needed)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==========================================
# PERFORMANCE CONFIGURATION
# ==========================================
# Three.js performance settings
THREEJS_ANTIALIAS=true
THREEJS_SHADOWS=true
THREEJS_PIXEL_RATIO=2

# Model loading optimization
MODEL_CACHE_SIZE=50
TEXTURE_CACHE_SIZE=100
ANIMATION_CACHE_SIZE=200

# ==========================================
# OBS STREAMING CONFIGURATION
# ==========================================
# OBS Browser Source settings
OBS_WIDTH=1920
OBS_HEIGHT=1080
OBS_FPS=30
OBS_QUALITY=high

# Stream overlay settings
OVERLAY_OPACITY=0.9
OVERLAY_BACKGROUND_COLOR=#000000
OVERLAY_TEXT_COLOR=#ffffff

# ==========================================
# DEVELOPMENT CONFIGURATION
# ==========================================
# Enable debug mode
DEBUG=false
DEBUG_THREEJS=false
DEBUG_AI=false
DEBUG_TTS=false

# Hot reload settings
HOT_RELOAD=true
LIVERELOAD_PORT=35729

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
ENABLE_AI_RESPONSES=true
ENABLE_TTS=true
ENABLE_LIP_SYNC=true
ENABLE_CHARACTER_SWITCHING=true
ENABLE_OUTFIT_CUSTOMIZATION=true
ENABLE_CAMERA_CONTROLS=true
ENABLE_CHAT_HISTORY=true
ENABLE_USER_PREFERENCES=true

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack integration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#mc-presenter

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id_here

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
# Auto backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7

# Cloud backup (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mc-presenter-backups

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Health check settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error tracking
SENTRY_DSN=your_sentry_dsn_here
ROLLBAR_ACCESS_TOKEN=your_rollbar_token_here

# ==========================================
# CUSTOMIZATION
# ==========================================
# Default character settings
DEFAULT_CHARACTER=female1
DEFAULT_OUTFIT=casual
DEFAULT_HAIR=long
DEFAULT_ACCESSORY=none
DEFAULT_COLOR=#ff6b6b

# UI settings
DEFAULT_THEME=dark
DEFAULT_LANGUAGE=vi
DEFAULT_FONT_SIZE=14

# ==========================================
# TESTING CONFIGURATION
# ==========================================
# Test environment settings
TEST_AI_PROVIDER=mock
TEST_TTS_PROVIDER=mock
TEST_MODEL_PATH=./test/models/test_character.glb

# Mock data settings
MOCK_RESPONSES_ENABLED=false
MOCK_TTS_ENABLED=false
MOCK_ANIMATION_ENABLED=false
